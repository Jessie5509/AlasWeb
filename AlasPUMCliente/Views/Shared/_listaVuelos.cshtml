@model List<Common.DTO.DtoVuelo>


@foreach (Common.DTO.DtoVuelo item in Model)
{


    <div class="card">
        <div id="card" class="panel panel-default" style="width: 350px; height: 350px; float:left;margin-left:10px; margin-bottom:150px; margin-right:15px;margin-top:15px; background-color: rgb(255, 255, 255)">

            <div id="portada" class="card-title" style="margin-left: 8px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: large;">@Html.DisplayFor(modelItem => item.destino)</div>

            <div class="panel-body" style="width: 350px; height: 320px;">
                <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.imagen)" style="width:auto; height: 300px;">

            </div>
            <div class="panel-footer">
                <p>$ @Html.DisplayFor(modelItem => item.precio)</p>
                <p id="contenido">Vuelo a @Html.DisplayFor(modelItem => item.destino)</p>
            


                @Html.ActionLink("Mostrar información", "VueloInfo", "Home", new { id = item.numeroVuelo }, new { @class = "btn btn-info" })
            </div>


        </div>
    </div>

}

